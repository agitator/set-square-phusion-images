#!/bin/bash

_exports="$(export)";

cat << EOF > /tmp/runme
#!/bin/bash

${_exports}
export PATH=/usr/sbin:${PATH}
/usr/local/bin/rabbitmq-start &
/usr/local/bin/bootstrap.sh
fg %1
EOF
chmod +x /tmp/runme

chpst -u ${SERVICE_USER}:${SERVICE_GROUP} -U ${SERVICE_USER}:${SERVICE_GROUP} /tmp/runme
