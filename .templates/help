COPY help-files/help.base.sh \
     help-files/show \
     help-files/display-dockerfile.sh \
     help-files/display-file.sh \
     /usr/local/bin/

COPY help-files/my_exec.d /etc/my_exec.d/

RUN chmod +x -- /usr/local/bin/help.base.sh && \
    ln -s -- /usr/local/bin/help.base.sh /usr/local/bin/-h && \
    ln -s -- /usr/local/bin/help.base.sh /usr/local/bin/--help && \
    chmod +x -- /usr/local/bin/display-dockerfile.sh /usr/local/bin/show && \
    ln -s -- /usr/local/bin/display-dockerfile.sh /usr/local/bin/Dockerfile && \
    ln -s -- /usr/local/bin/Dockerfile /usr/local/bin/dockerfile

